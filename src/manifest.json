{
  "name": "Testofill, Form Filler for Testers",
  "version": "0.4",
  "manifest_version": 2,
  "author": "Jakub Holy <http://theholyjava.wordpress.com/>",

  "description": "Enable testers to fill forms automatically/on-demand based on (sets of) rules they wrote / captured.",
  "icons": {},
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "Testofill",
    "default_icon": {
      "19": "autofill_16x16.png"
    }
	},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["lib/sizzle-20140125.min.js", "lib/underscore-min.js", "testofill-run.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["events.js"],
    "persistent": false
  },
  "icons": {
    "16": "autofill_16x16.png"
  }
}
