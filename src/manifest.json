// ref. http://dev.screw-axis.com/doc/chrome_extensions/tutorials/getting_started/
{
  "name": "Testofill, Form Filler for Testers",
  "version": "0.1",
  "manifest_version": 2,
  "author": "Jakub Holy <http://theholyjava.wordpress.com/>",

  "description": "Enable testers to fill forms automatically/on-demand with predefined and/or generated values. It is possible to define and choose from multiple sets of values for a given form.",
  "icons": {},
  "permissions": [
    "activeTab",
    "storage",
    "tabs" // needed to access tab.url in onUpdated etc.
  ],
  "browser_action": {
    "default_title": "Testofill",
    "default_icon": {
      // Note: only 19 and 38 supported ,we have to lie for now
      "19": "autofill_16x16.png" // by Designmodo ,https://www.iconfinder.com/icons/115700/
    },
    "default_popup": "popup.html"
	},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["sizzle-20140125.min.js", "testofill-run.js"],
      "run_at": "document_idle", // or document_start, document_end, document_idle
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["events.js"],
    "persistent": false
  }
}
