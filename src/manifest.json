// ref. http://dev.screw-axis.com/doc/chrome_extensions/tutorials/getting_started/
{
  "name": "Autofill chrome extension",
  "version": "1.0",
  "manifest_version": 2,

  "description": "This chrome extension fills out forms automatically.",
  "icons": {},
  "permissions": [
	    "activeTab"
  ],
  "browser_action": {
    "default_title": "Autofill",
    "default_icon": "autofill_16x16.png" // by Designmodo ,https://www.iconfinder.com/icons/115700/
	},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["jquery-1.8.2.min.js", "run.js"],
      "run_at": "document_idle", // or document_start, document_end, document_idle
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "background": { "page": "background.html" }
}
